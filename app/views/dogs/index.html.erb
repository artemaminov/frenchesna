<div class="space"></div>
<div class="title">
  <h1>Французкие бульдоги и Грифоны</h1>
</div>
<div class="about-company box">
  <h2>О питомнике</h2>
  <p><%= Preference.about %></p>
</div>
<div class="dogs-list">
  <h2 class="our-dogs">Наши собаки</h2>
  <ul>
    <%= render partial: 'shared/dogs_list', locals: { dogs: @dogs } %>
  </ul>
</div>

<% content_for :right_sidebar do %>
<% unless @puppies.blank? %>
<div class="menu">
  <div class="descendants">
    <span class="title">Щенки в наличии</span>
    <ul class="list">
      <%= render partial: "shared/dogs_list", locals: { dogs: @puppies, reverse: true } %>
    </ul>
  </div>
</div>
<% end %>
<% end %>